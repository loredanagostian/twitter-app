<div class="row justify-content-center">
  <div class="col-xs-12 col-sm-5">

    <% if flash[:error] %>
      <div class="alert alert-primary"> <%= flash[:error] %> </div>
    <% end %>

    <%= form_with url: login_path do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control"%> <br><br>

      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control" %> <br><br>

      <%= f.submit 'Sign In'%> <br>
    <% end %>
  </div>
</div>
