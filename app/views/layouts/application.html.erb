            <li class="nav-item">
              <%= link_to('Posts', '/posts', class: 'nav-link') %>
            </li>

            <li class="nav-item">
              <% if current_user.try(:admin?) %>
                <%= link_to('Statistics', 'statistics', class: 'nav-link') %>
              <% end %>
            </li>
          </ul>

          <% if logged_in? %>
