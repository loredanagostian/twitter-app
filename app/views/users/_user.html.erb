<% if flash[:success] %>
  <div class="alert alert-primary"> <%= flash[:success] %></div>
<% end %>

<div class="card">
  <div class="card-body">
    <h5 class="card-title"><%= link_to(user.name, "/users/#{user.id}") %></h5>
    <p class="card-text">
      email: <%= user.email %><br>
      age: <%= user.age %><br>
      gender: <%= user.gender %><br>
      phone_number: <%= user.phone_number %><br>
    </p>

    <% if current_user.admin? %>
      <% if !current_user?(user) %>
        <%= link_to 'delete', user, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
      <% end %>
    <% end %>
  </div>
</div>

