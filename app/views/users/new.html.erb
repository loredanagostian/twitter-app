<% if flash[:error] %>
    <div class="alert alert-primary"> <%= flash[:error] %> </div>
<% end %>

<div class="row justify-content-center">
  <div class="col-xs-12 col-sm-5">

      <% @user.errors.full_messages.each do |_| %>
        <%= render partial: 'shared/error_messages', locals: { object: @user } %>
      <% end %>

    <%= form_for @user do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control"%> <br><br>

      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control" %> <br><br>

      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %> <br>
      <%= f.submit 'Sign Up'%> <br>
    <% end %>
  </div>
</div>

