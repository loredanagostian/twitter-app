<h1> Edit Post </h1>

<div class="col-md-3">
  <%= render partial: 'shared/error_messages', locals: { object: @post } %>
  <%= form_for @post do |f|%>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
    <br>

    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control' %>
    <br>

    <%= f.submit 'Edit', class: 'btn btn-primary mt-2'%>
  <% end %>
</div>
