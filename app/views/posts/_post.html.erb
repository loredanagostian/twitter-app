<div class="card">
  <div class="card-body">
    <h5 class="card-title"><%= link_to(post.title, post) %></h5>
    <p class="card-text">
      Description: <%= post.description %><br>
      Posted by <%= link_to(post.user.name, post.user) %> <%= time_ago_in_words(post.created_at) %> ago
    </p>
  </div>
</div>